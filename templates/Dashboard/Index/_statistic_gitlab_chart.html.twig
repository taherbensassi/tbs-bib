<div class="col-md-6">
    <div class="card item">
        {% if gitlabStatsFailed is defined and gitlabStatsFailed == false  %}
            <div class="card-header">
                <h3 class="card-title">Gitlab Stats</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
            </div>
            <div class="card-body">
                <canvas id="donutChart" data-value="{{ gitlabStats }}" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
            </div>
        {% else %}
            {% include 'Block/Alert/_alert_gitlab_api_error.html.twig'  %}
        {% endif %}
        <!-- /.card-body -->
    </div>
</div>
