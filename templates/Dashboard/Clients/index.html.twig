{% extends '@layout/layout-index.html.twig' %}

{% block card %}
    <div class="card">
        <div class="card-header  d-flex justify-content-between align-items-right">
            <h3 class="card-title">Kunden Liste</h3>
            <a href="{{ path("client_new") }}" class="btn btn-outline-dark  ml-auto">
                <i class="fa fa-plus"></i>
                Neuer Kunde
            </a>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            {% include 'Block/Flash/_flash_message.html.twig'  %}

            <table id="table" class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Erstellt</th>
                    <th>Name</th>
                    <th>E-Mail</th>
                    <th>Firma</th>
                    <th>HomePage</th>
                    <th>Aktionen</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.id }}</td>
                        <td>{{ client.created|date("m-d-Y") }}</td>
                        <td>{{ client.name }}</td>
                        <td>{{ client.email }}</td>
                        <td>{{ client.company }}</td>
                        <td>{{ client.homePage }}</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-flat">Aktionen</button>
                                <button type="button" class="btn btn-default btn-flat dropdown-toggle dropdown-icon" data-toggle="dropdown">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu" role="menu">
                                    {{ include('Dashboard/Clients/_delete_form.html.twig') }}
                                    <a class="dropdown-item" href="{{ path('client_edit', {'id': client.id}) }}">Bearbeiten</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">keine Datens√§tze gefunden</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
{% endblock %}

