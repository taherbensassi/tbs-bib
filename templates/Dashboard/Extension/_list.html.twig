<div class="col-md-9">
    <div class="row">
        {% if tbs_extensions is empty %}
            <div class="col-md-12">
                <div class="alert alert-info alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    <h5><i class="icon fas fa-info"></i> Alert!</h5>
                    Es gibt kein Extension
                </div>
            </div>
        {% else %}
            {% for tbs_extension in tbs_extensions %}
                <div class="col-md-4 ">
                    <div class="card ">
                        <div class="card-body">
                            <div class="align-items-center w-100 ">
                                <div class="d-flex justify-content-between  pb-2">
                                    <h3 class="card-title">
                                        <img class="ter-ext-icon"  src="{{ asset('dist/img/extension/extension.svg') }}" height="20" width="20">
                                        <a href="" class="ml-2">{{ tbs_extension.title }}</a>
                                    </h3>
                                </div>
                                <small class="card-subtitle text-muted mb-2">
                                    {{ tbs_extension.extensionKey }}
                                </small>
                                <div class="item">
                                    <p>
                                        {% if tbs_extension.description|length > 155%}
                                            <a type="button" class="link-dark" data-description="{{ tbs_extension.description }}" data-toggle="modal" data-target="#descriptionModal" style="color: black">
                                                {{ tbs_extension.description|raw|slice(0,155) }} <small class="btn btn-xs btn-link   ml-auto">weiter lesen</small>
                                            </a>
                                        {% else %}
                                            {{ tbs_extension.description }}
                                        {% endif %}
                                    </p>
                                </div>
                                <hr>
                                {% include 'Dashboard/Extension/Card/_typo3_version.html.twig'%}
                            </div>
                        </div>
                        {% include 'Dashboard/Extension/Card/_button.html.twig'%}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    {{ knp_pagination_render(tbs_extensions, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
</div>
{% include 'Dashboard/Extension/Modal/_modal.html.twig'%}
