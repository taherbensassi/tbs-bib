{% extends '@layout/layout-index.html.twig' %}

{% block card %}
    <div class="card">
        <div class="card-header  d-flex justify-content-between align-items-right">
            <h3 class="card-title">Liste der von den Brettinghams erstellten Site Packge (tbs_provider)</h3>
            <a href="{{ path("site_package_new") }}" class="btn btn-outline-dark  ml-auto">
                <i class="fa fa-plus"></i>
                Extension generieren
            </a>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            {% include 'Block/Flash/_flash_message.html.twig'  %}

            <table id="table" class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Version</th>
                    <th>Titel</th>
                    <th>Benutzer</th>
                    <th>Erstellt</th>
                    <th>Herunterladen</th>
                    <th>Aktionen</th>
                </tr>
                </thead>
                <tbody>
                {% for site_package in site_packages %}
                    <tr>
                        <td>{{ site_package.id }}</td>
                        <td>{{ site_package.typo3Version }}</td>
                        <td>{{ site_package.title }}</td>
                        <td>{{ site_package.user.email }}</td>
                        <td>{{ site_package.created|date("m-d-Y") }}</td>
                        <td><a class="btn btn-link" href="{{ absolute_url(asset(site_package.path)) }}">Herunterladen</a></td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-flat">Aktion</button>
                                <button type="button" class="btn btn-default btn-flat dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <div class="dropdown-menu" role="menu" >
                                    {{ include('Dashboard/Site Package/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">keine Datens√§tze gefunden</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
{% endblock %}

