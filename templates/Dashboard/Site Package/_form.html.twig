{{ form_start(form) }}
<div class="card-body">
    <div class="alert alert-secondary">
        Der Extension wird nur für 3 Tage zur Verfügung stehen
    </div>
    {{ form_row(form._token) }}

    {% set formErrors = form.vars.errors.form.getErrors(true) %}
    {# If there are errors in the form, display them in this unorganized list #}
    {% if formErrors|length %}
        {% for error in formErrors %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
    {% endif %}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <!-- /.form-group -->
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.title) }} </label>
                    {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="exampleInputEmail1">{{ form_label(form.typo3Version) }}</label>
                {% for child in form.typo3Version %}
                    <div class="form-check">
                        <input type="radio" id="{{ child.vars.id }}" name="{{ form.vars.id ~ '[' ~ form.typo3Version.vars.name ~ ']' }}"  class="form-check-input" value="{{ child.vars.value }}" checked>
                        <label class="form-check-label"> {{ child.vars.label }}</label>
                    </div>
                {% endfor %}
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">{{ form_label(form.basePackage) }}</label>
                {% for child in form.basePackage %}
                    <div class="form-check">
                        <input type="radio" id="{{ child.vars.id }}" name="{{ form.vars.id ~ '[' ~ form.basePackage.vars.name ~ ']' }}"  class="form-check-input" value="{{ child.vars.value }}" checked />
                        <label class="form-check-label"> {{ child.vars.label }}</label>
                    </div>
                {% endfor %}
            </div>


            <!-- /.form-group -->
        </div>
        <!-- /.col -->
        <div class="col-md-6">
            <div class="form-group">
                <label>{{ form_label(form.description) }}</label>
                {{ form_widget(form.description, { 'attr': {'class': 'form-control','rows': '3'} }) }}
            </div>
            <!-- /.form-group -->
            <div class="form-group">
                <label>{{ form_label(form.repositoryUrl) }}</label>
                {{ form_widget(form.repositoryUrl, { 'attr': {'class': 'form-control' }}) }}
            </div>
            <!-- /.form-group -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>
<div class="card-footer">
    <button type="submit" class="btn btn-dark" ><i class="fa fa-save"></i> <i class="fa fa-list"></i> Generieren und speichern</button>
</div>
{{ form_end(form, {'render_rest': false}) }}