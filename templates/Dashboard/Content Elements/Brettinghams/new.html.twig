{% extends 'base.html.twig' %}
{% block title %}Neuer Tbs Module{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('plugins/codemirror/codemirror.css') }}">
    <link rel="stylesheet" href="{{ asset('plugins/codemirror/theme/dracula.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('plugins/bs-custom-file-input/bs-custom-file-input.min.js') }}"></script>
    <script src="{{ asset('plugins/codemirror/codemirror.js') }}"></script>
    <script src="{{ asset('plugins/codemirror/addon/display/autorefresh.js') }}"></script>
    <script src="{{ asset('plugins/codemirror/mode/css/css.js') }}"></script>
    <script src="{{ asset('plugins/codemirror/mode/xml/xml.js') }}"></script>
    <script src="{{ asset('plugins/codemirror/mode/clike/clike.js') }}"></script>
    <script src="{{ asset('plugins/codemirror/mode/php/php.js') }}"></script>
    <script src="{{ asset('plugins/codemirror/mode/sql/sql.js') }}"></script>
    <script src="{{ asset('plugins/codemirror/mode/htmlmixed/htmlmixed.js') }}"></script>
    <script src="{{ asset('plugins/matchHeight/jquery.matchHeight.js') }}"></script>
    <script src="{{ asset('dist/js/module/tbs-content-element.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="content-wrapper">
        {% include 'Partial/Breadcrumb/_breadcrumb.htnl.twig' with {'breadcrumb': 'Tbs Module'} %}
        <div class="content">
            <div class="container-fluid">
                <div class="card border-0">

                    <div class="card-header  d-flex justify-content-between align-items-right">
                        <h3 class="card-title">Neuen Tbs Module</h3>
                        <a href="{{ path('tbs_module_index') }}" class="btn btn-outline-dark  ml-auto">
                            Abbrechen
                        </a>
                    </div>

                    {{ include('Dashboard/Content Elements/Brettinghams/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
