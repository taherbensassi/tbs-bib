{% extends '@layout/layout-index.html.twig' %}
{% block title %}Brettinghams Module{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('plugins/ekko-lightbox/ekko-lightbox.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('plugins/ekko-lightbox/ekko-lightbox.min.js') }}"></script>
    <script src="{{ asset('plugins/bs-custom-file-input/bs-custom-file-input.min.js') }}"></script>
    <script src="{{ asset('plugins/matchHeight/jquery.matchHeight.js') }}"></script>
    <script src="{{ asset('dist/js/module/tbs-content-element.js') }}"></script>
{% endblock %}
{% block card %}
    <div class="callout callout-info">
        <h5><i class="fas fa-info"></i> Hinweis:</h5>
        Vor dem Einfügen des Tbs Content-Elements ! Modul-Code sollte eingefügt werden! (Bearbeitung nur für Author sichtbar!)
        <div class="d-flex justify-content-between align-items-right">
            <a href="{{ path("tbs_module_new") }}" class="btn btn-outline-dark  ml-auto">
                <i class="fa fa-plus"></i>
                Module
            </a>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            {% include 'Dashboard/Content Elements/Brettinghams/Filter/_filter.html.twig'  %}
            {% include 'Dashboard/Content Elements/Brettinghams/_list.html.twig'  %}
        </div>
    </div>
{% endblock %}

