<div class="card-body">

    {{ form_start(form, { 'attr': {'id': 'formCe'} }) }}
    {{ form_row(form._token) }}
    {% include 'Block/Flash/_flash_message.html.twig'  %}
    {% set formErrors = form.vars.errors.form.getErrors(true) %}
    {# If there are errors in the form, display them in this unorganized list #}
    {% if formErrors|length %}
        {% for error in formErrors %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}
    {% endif %}



    <div class="form-group" >
        <label for="elementKey">{{ form_label(form.title) }} </label>
        {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group" >
        <label for="elementTitle">{{ form_label(form.description) }} </label>
        {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group" >
        <label for="exampleInputEmail1">{{ form_label(form.typo3Version) }}</label>
        {% for child in form.typo3Version %}
            <div class="form-check">
                <input type="radio" id="{{ child.vars.id }}" name="{{ form.vars.id ~ '[' ~ form.typo3Version.vars.name ~ ']' }}"  class="form-check-input" value="{{ child.vars.value }}" checked>
                <label class="form-check-label"> {{ child.vars.label }}</label>
            </div>
        {% endfor %}
    </div>

    <div class="form-group" >
        <label for="link">{{ form_label(form.link) }} </label>
        {{ form_widget(form.link, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group" >
        <label for="shortTitle">{{ form_label(form.previewImageFileName) }} </label>
        {{ form_widget(form.previewImageFileName, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group" >
        <label for="shortTitle">{{ form_label(form.moduleImages) }} </label>
        {{ form_widget(form.moduleImages, { 'attr': {'class': 'form-control'} }) }}
    </div>


</div>
<div class="card-footer" >
    <button type="submit" class="btn btn-dark" id="saveData">Speichern</button>
</div>
{{ form_end(form, {'render_rest': false}) }}
